{
    "manifest_version": 3,
    "name": "Wordle Accessibility Helper",
    "version": "1.0.0",
    "description": "Accessibility tool for Wordle - helps dyslexic users and non-native English speakers identify valid English words for learning support",
    "permissions": ["activeTab", "storage"],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["https://www.nytimes.com/games/wordle/*"],
            "js": ["content.js"]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Wordle Debug Extension"
    }
}

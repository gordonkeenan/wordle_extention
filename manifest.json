{
  "manifest_version": 3,
  "name": "Wordle Debug Extension",
  "version": "1.0",
  "description": "Chrome extension for debugging Wordle with color-coded guess highlighting",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.nytimes.com/games/wordle/*"
      ],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Wordle Debug Extension"
  }
}
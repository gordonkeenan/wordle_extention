{
  "name": "wordle-extension-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for Wordle extension and presentation system",
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "vite",
    "build": "npm run build:packages",
    "build:packages": "npm run build --workspace=@preso/core --workspace=@preso/react --workspace=@preso/modules --workspace=@preso/templates --workspace=@preso/cli",
    "build:chrome": "vite build --mode chrome",
    "build:chrome-dev": "vite build --mode chrome-dev",
    "build:firefox": "vite build --mode firefox",
    "build:firefox-dev": "vite build --mode firefox-dev",
    "build:userscript": "vite build --mode userscript",
    "build:userscript-dev": "vite build --mode userscript-dev",
    "build:all": "npm run build:chrome && npm run build:firefox && npm run build:userscript",
    "build:all-dev": "npm run build:chrome-dev && npm run build:firefox-dev && npm run build:userscript-dev",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:all": "npm run test --workspaces",
    "studio": "npm run dev --workspace=@preso/studio"
  },
  "dependencies": {},
  "devDependencies": {
    "@vitejs/plugin-legacy": "^5.0.0",
    "vite": "7.1.7",
    "vite-plugin-web-extension": "^4.0.0",
    "webextension-polyfill": "^0.10.0",
    "vitest": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "@vitest/coverage-v8": "^1.6.0",
    "jsdom": "^24.1.0"
  },
  "author": "Gordon Keenan",
  "license": "MIT"
}
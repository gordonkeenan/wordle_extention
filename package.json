{
  "name": "wordle_accessibility_helper",
  "version": "1.0.0",
  "description": "Wordle accessibility tool for dyslexic users and non-native English speakers - highlights valid English words to support learning.",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:presentation": "vite --mode presentation-dev",
    "build": "vite build",
    "build:chrome": "vite build --mode chrome",
    "build:chrome-dev": "vite build --mode chrome-dev",
    "build:firefox": "vite build --mode firefox",
    "build:firefox-dev": "vite build --mode firefox-dev",
    "build:userscript": "vite build --mode userscript",
    "build:userscript-dev": "vite build --mode userscript-dev",
    "build:presentation": "vite build --mode presentation",
    "build:presentation-dev": "vite build --mode presentation-dev",
    "build:all": "npm run build:chrome && npm run build:firefox && npm run build:userscript",
    "build:all-dev": "npm run build:chrome-dev && npm run build:firefox-dev && npm run build:userscript-dev",
    "preview": "vite preview",
    "preview:presentation": "vite preview --mode presentation",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.14",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^4.1.14"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@vitejs/plugin-legacy": "^5.0.0",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "jsdom": "^24.1.0",
    "vite": "7.1.7",
    "vite-plugin-web-extension": "^4.0.0",
    "vitest": "^1.6.0",
    "webextension-polyfill": "^0.10.0"
  },
  "author": "Gordon Keenan",
  "license": "MIT"
}
